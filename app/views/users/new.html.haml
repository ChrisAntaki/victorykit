- if @user.errors.any?
  .alert.alert-error
    Form is invalid
    %ul
      - @user.errors.full_messages.each do |message|
        %li= message

.signup_login
  .signup
    %h1
      Sign Up
    = simple_form_for @user do |f|
      = f.input :email, :error => false
      = f.input :password, :error => false, :required => true
      = f.input :password_confirmation, :error => false, :required => true
      = f.button :submit, :class => 'btn btn-primary', :id => 'sign-up-submit', :value => 'Sign Up'

  = render :partial => 'shared/login_form'

