%meta{'http-equiv' => 'X-UA-Compatible',  'content' => 'chrome=1'}

= simple_form_for(@petition, html: {class: 'form-horizontal' }) do |f|
  = f.input :title, as: :string, tabindex: 1
  = f.input :description, tabindex: 2
  - if can :feature_petition
    = f.input :to_send, label: 'Feature this petition', tabindex: 3
  - if can :feature_petition
    .controls
      = link_to_add_fields "Customize Email Subject", f, :petition_titles, {:class => "string", :id => 'email_subject_link'}, {:title_type => "email", :label_name => "Email Subject"}, "#banana"
    #email_subject
      .control-group.string
        .control-label Email Subject
        .controls#banana
          = f.fields_for :petition_titles do |builder|
            = render 'petition_title_fields', {f: builder, title_type: "email"}
          = link_to_add_fields "Add Email Subject", f, :petition_titles, {:class => "string btn btn-primary email_subject_add_link"}, {:title_type => "email", :label_name => "Email Subject"}, "#banana"

    .controls
      %a#facebook_title_link Customize facebook title.
    #facebook_title
      #apple
      .control-group.string
        = link_to_add_fields "Add Facebook Title", f, :petition_titles, {:class => "string control-label"}, {:title_type => "facebook", :label_name => "Facebook Title"}, "#apple"
        .controls.description_text
          This will show up on facebook pages when someone likes your petition.
      = f.fields_for :petition_titles do |builder|
        = render 'petition_title_fields', {f: builder, title_type: "facebook"}
  .controls
    -# trick not to submit the form on enter
    = f.button :submit, class: 'btn btn-primary', tabindex: 6, onmousedown: "this.title=1", onclick: "if(this.title!=1){return false;}"
