
<h1>
  <%= @petition.title %>
</h1>

<p>
  <%= @petition.description %>
</p>
<%= hidden_field_tag 'petitionId', @petition.id %>
<div id="sign-up-form" >
	<div class="hero-unit">
	  <%= simple_form_for([@petition, @signature])  do | f |  %>

      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.button :submit, :class => 'btn btn-primary', :value => 'Sign!' %>

	  <% end %>
	</div>
</div>

<div id="thanks-for-signing-message" style="display:none">
	<p>Thanks for signing -- please share on Facebook:</p>
</div>

<div id="sharing-stuff">
	<%= facebook_like petition_url(params[:petition_id]) %>
</div>

<%= link_to_if current_user, 'Edit', edit_petition_path(@petition), class: "btn btn-primary icon-edit icon-white" if current_user %>
<% content_for(:meta_tags) do %>
	<% petition_to_open_graph(@petition).each do |key, value|%>
		<%= content_tag "meta", nil, property:key, content:value %>
	<% end %>
<% end %>
