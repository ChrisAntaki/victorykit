= link_to('', '/', :class => 'logo')
.logininfo
  - if current_user
    %div
      Logged in as #{current_user.email}
    = link_to('Change Password', edit_user_path(current_user))
    = link_to('Log Out', logout_path)
  - else
    = link_to('Sign Up', signup_path)
    = link_to('Log In', login_path)
.navbar
  .navbar-inner
    .container
      %ul.nav
        %li= link_to('Start a petition', new_petition_path)
        %li= link_to('View all Petitions', petitions_url)
        - if current_user && (current_user.is_super_user || current_user.is_admin)
          %li= link_to('Users', admin_users_url)

