%div.row
  %div.span12
    %div.page-header
      %h1 Funnels

      = render partial: "admin/dashboard/navigation", locals: { active: :funnels }

      %div.pull-right
        %span.muted.nav-divider
          %i.icon-calendar
          show:
        %ul.nav.nav-pills.pill-block.no-trailing
          - Statistics::TIMEFRAMES.each do |frame|
            %li{class: @statistics.timeframe == frame ? "active" : ""}
              %a{href: url_for(params.merge(t: frame))}= frame

      %div.clearfix

%div#dashboard.row
  %div.span12
    = render partial: 'shared/chart_legend'

  %div.span6
    %h4 Email Opened Per Email Sent
    %iframe.chart.span6{ src: emails_opened_chart }

    %h4 Email Clicked Per Email Opened
    %iframe.chart.span6{ src: emails_clicked_chart }

    %h4 Signature From Email Per Email Clicked
    %iframe.chart.span6{ src: signatures_from_email_chart }

  %div.span6
    %h4 Facebook Action Per Signature
    %iframe.chart.span6{ src: facebook_action_per_signature_chart }

    %h4 Petition Page Load Not Off Email
    %iframe.chart.span6{ src: petition_page_load_chart }

    %h4 Signature Per Petition Page Load Not Off Email
    %iframe.chart.span6{ src: signature_per_petition_page_load_chart }
