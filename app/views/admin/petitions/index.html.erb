<h1>Petitions dashboard</h1>

Since <%= link_to_self_with_param :since, {'today' => Date.today,'yesterday' => 1.day.ago, 'a week ago' => 1.week.ago, 'a month ago' => 1.month.ago, 'a year ago' => 1.year.ago, 'forever' => nil}, " | " %>

<table 
	id="petitions" 
	class="bordered-table table-striped dataTable" 
	data-source="<%= admin_petitions_url(format: "json", since: params[:since]) %>">

  <thead>
    <tr>
      <th>Title</th>
      <th>Hits</th>
      <th>Signatures</th>
      <th>Conversion</th>
      <th>New members</th>
      <th>Virality</th>
      <th>Created</th>
    </tr>
  </thead>

  <tbody>
  </tbody>

</table>