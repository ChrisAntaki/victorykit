<h1>Petitions dashboard</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Hits</th>
    <th>Signatures</th>
    <th>Conversion</th>
    <th>New members</th>
    <th>Virality</th>
    <th>Created</th>
  </tr>

<% @petitions.each do |petition| %>
  <tr>
    <td><%= petition.title %></td>
    <td><%= petition.analytics.hit_count %></td>
    <td><%= petition.analytics.signature_count %></td>
    <td><%= float_to_percentage(petition.analytics.conversion_rate) %></td>
    <td><%= petition.analytics.new_member_count %></td>
    <td><%= float_to_percentage(petition.analytics.virality_rate) %></td>
    <td><%= petition.created_at %></td>
  </tr>
<% end %>

</table>