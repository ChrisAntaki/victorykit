#!/usr/bin/env ruby

if IO.popen("ruby --version").read.split[1] == "1.9.3p125"
  puts "OK - ruby"
else
  puts "ERR - please install ruby 1.9.3.p125"
end

if IO.popen("echo info | redis-cli | grep redis_version").read.split(':')[1].strip == "2.4.11"
  puts "OK - redis"
else
  puts "ERR - please install redis 2.4.11"
end

if IO.popen("rails --version").read.split[1] == "3.2.3"
  puts "OK - rails"
else
  puts "ERR - please install Rails 3.2.3"
end

if IO.popen("psql --version").read.split[2] == "9.1.3"
  if IO.popen('echo "select 1" | psql -At postgres').read.strip == "1"
    puts "OK - postgres"
  else
    puts "ERR - postgres isn't running"
  end
else
  puts "ERR - please instal postgres 9.1.3"
end